{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./sdk/types",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "assets": ["./src/assets"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "typedocOptions": {
    "entryPoints": ["./src/types/NEMeetingKit.ts", "./src/types/type.ts"],
    "out": "docs",
    "name": "NEMeetingKit",
    "hideGenerator": true,
    "disableSources": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["./node_modules/**/*", "./src/libs/3rd"]
}
