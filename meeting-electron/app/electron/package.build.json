{
  "name": "Netease",
  "version": "4.3.0",
  "description": "NetEase Meeting",
  "keywords": [],
  "license": "MIT",
  "main": "src/index_canvas.js",
  "scripts": {
    "build": "electron-builder build",
    "lint": "echo \"No linting configured\"",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "start": "electron-forge start"
  },
  "dependencies": {
    "applescript": "^1.0.0",
    "electron-updater": "^6.1.1",
    "electron-log": "^5.0.0",
    "neroom-node-sdk": "^1.0.0",
    "electron-dl": "^3.5.1",
    "fs-extra": "^10.1.0",
    "image-size": "1.0.2",
    "semver": "^7.5.4",
    "systeminformation": "^5.21.11"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-dmg": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "electron": "24.8.3",
    "electron-builder": "24.6.3"
  },
  "build": {
    "productName": "网易会议",
    "appId": "",
    "files": ["build/**/*", "src/**/*", "package.json"],
    "mac": {
      "artifactName": "meeting.${ext}",
      "mergeASARs": false,
      "icon": "assets/macx.icns",
      "identity": "",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "entitlements": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "网易会议需要使用您的麦克风",
        "NSCameraUsageDescription": "网易会议需要使用您的摄像头"
      }
    },
    "dmg": {
      "background": "assets/install-background@2x.jpg",
      "writeUpdateInfo": false,
      "window": {
        "width": 590,
        "height": 400
      },
      "contents": [
        {
          "x": 162,
          "y": 190,
          "type": "file"
        },
        {
          "x": 438,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "artifactName": "meeting.${ext}",
      "icon": "assets/win.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false
    }
  }
}
